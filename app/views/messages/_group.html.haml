.chat-side
  .side__header
    .side__header__box
      %h3.side__header__box-user-name
        = current_user.name
      %ul.side__header__box__menu
        %li.side__header__box__menu__list
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.side__header__box__menu__list
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .side__groups
    .side__groups
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
