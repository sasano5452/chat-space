.main__message
  .main__message-upper-info
    %p.main__message-upper-info__talker
      = message.user.name
    %p.main__message-upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  %p.main__message__text
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
      